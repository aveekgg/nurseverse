# Supabase Configuration
VITE_SUPABASE_PROJECT_ID="your-project-id"
VITE_SUPABASE_PUBLISHABLE_KEY="your-publishable-key"
VITE_SUPABASE_URL="https://your-project.supabase.co"

# VAPI Configuration
VITE_VAPI_PUBLIC_KEY="your-vapi-public-key"
VITE_VAPI_ASSISTANT_ID=""

# Language Configuration
# Configure which language you want to learn and which language you already know
# Examples:
# - Learning German from English: VITE_LANGUAGE_TO_LEARN="German", VITE_LANGUAGE_KNOWN="English"
# - Learning Hindi from English: VITE_LANGUAGE_TO_LEARN="Hindi", VITE_LANGUAGE_KNOWN="English"
# - Learning Spanish from English: VITE_LANGUAGE_TO_LEARN="Spanish", VITE_LANGUAGE_KNOWN="English"

VITE_LANGUAGE_TO_LEARN="German"
VITE_LANGUAGE_TO_LEARN_CODE="de"
VITE_LANGUAGE_KNOWN="English"
VITE_LANGUAGE_KNOWN_CODE="en"

# Supported Language Codes:
# de = German
# hi = Hindi
# es = Spanish
# fr = French
# it = Italian
# pt = Portuguese
# ja = Japanese
# zh = Chinese
# ko = Korean
# ar = Arabic
# ru = Russian
# nl = Dutch
# sv = Swedish
# pl = Polish
# tr = Turkish

# Session Configuration
# How long before the session times out due to inactivity (in minutes)
VITE_SESSION_TIMEOUT_MINUTES=5

# Auto-reconnect if connection drops unexpectedly
VITE_ENABLE_AUTO_RECONNECT=true
